<% title = "Accueil" %>

<!-- 🏠 Page d'accueil du Dashboard Looty -->

<h1>🎉 Bienvenue sur le Dashboard de Looty</h1>

<!-- 🔓 Si l'utilisateur n'est pas connecté -->
<% if (!user) { %>
  <!-- 🔑 Connexion Discord -->
  <p>
    <a href="/auth//login?state=returnToDashboard">
      <button>🔑 Se connecter avec Discord</button>
    </a>
  </p>

  <!-- ➕ Ajouter le bot -->
  <p>
    <a
    href="/invite"
    style="
      display: inline-block;
      background-color: #5865F2;
      color: white;
      font-weight: bold;
      text-decoration: none;
      padding: 12px 20px;
      border-radius: 8px;
      font-size: 16px;
      transition: background-color 0.2s;
    "
    onmouseover="this.style.backgroundColor='#4752C4'"
    onmouseout="this.style.backgroundColor='#5865F2'"
  >
    ➕ Ajouter Looty sur mon serveur
  </a>
  </p>

<!-- 🔐 Si l'utilisateur est connecté -->
<% } else { %>
  <!-- 👤 Bienvenue -->
  <p>👋 Bonjour <strong><%= user.username %>#<%= user.discriminator %></strong></p>

  <!-- 📂 Dashboard -->
  <p>
    <a href="/dashboard">
      <button>📂 Accéder au Dashboard</button>
    </a>
  </p>

  <!-- 🚪 Déconnexion -->
  <p>
    <a href="/auth/logout">🚪 Se déconnecter</a>
  </p>
<% } %>
