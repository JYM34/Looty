const config = require('../bot/config');

// üîß Formatage d'horodatage FR
const now = () => new Date().toLocaleString("fr-FR", { timeZone: "Europe/Paris" });

module.exports = {
    debug(message) {
        console.log(`${config.WHITE}${now()} :üêû ${config.BLUE}${message}${config.WHITE}`);
    },

    success(message) {
        console.log(`${config.WHITE}${now()} : ${config.GREEN}${message}${config.WHITE}`);
    },

    info(message) {
        console.log(`${config.WHITE}${now()} : ${config.BLUE}${message}${config.WHITE}`);
    },

    warn(message) {
        console.warn(`${config.WHITE}${now()} : ${config.RED} ‚ö† ${message}${config.WHITE}`);
    },

    error(message) {
        console.error(`${config.WHITE}${now()} : ${config.RED}‚ùå ${message}${config.WHITE}`);
    }
};
