const config = require('../bot/config');

// üîß Formatage d'horodatage FR
const now = () => new Date().toLocaleString("fr-FR", { timeZone: "Europe/Paris" });

// üì¶ R√©cup√®re le mode d‚Äôenvironnement (par d√©faut: d√©veloppement)
const isDev = config.NODE_ENV !== "production";

module.exports = {
    debug(message, message2 = "") {
        if (isDev) {
            console.log(`${config.WHITE}${now()} : üêû ${config.BLUE}${message}${config.WHITE}${message2}`);
        }
    },

    success(message, message2 = "") {
        console.log(`${config.WHITE}${now()} : ‚úÖ ${config.GREEN}${message}${config.WHITE}${message2}`);
    },

    maj(message, message2 = "") {
        console.log(`${config.WHITE}${now()} : üîÑ ${config.GREEN}${message}${config.WHITE}${message2}`);
    },

    timer(message, message2 = "") {
        console.log(`${config.WHITE}${now()} : ‚åõ ${config.WHITE}${message}${config.BLUE}${message2}${config.WHITE}`);
    },

    info(message, message2 = "") {
        console.log(`${config.WHITE}${now()} : ‚ÑπÔ∏è ${config.BLUE}${message}${config.WHITE}${message2}`);
    },

    warn(message, message2 = "") {
        console.warn(`${config.WHITE}${now()} : ‚ö†Ô∏è ${config.RED} ${message}${config.WHITE}${message2}`);
    },

    error(message, err) {
        console.error(`${config.WHITE}${now()} : ‚ùå ${config.RED} ${message}${config.WHITE}${err}`);
    }
};
